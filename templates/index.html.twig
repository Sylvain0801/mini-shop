{% extends "base.html.twig" %}
{% block title 'Accueil - La Boutique Design' %}
{% block body %}
<header id="fh5co-header" class="fh5co-cover js-fullheight main-bg-2" role="banner" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="display-t js-fullheight">
          <div class="display-tc js-fullheight animate-box" data-animate-effect="fadeIn">
            <h1>Découvrez tous nos produits design</h1>
            <h2>Lorem ipsum, dolor sit amet consectetur adipisicing elit.</h2>
            <a href="#fh5co-featured-menu" class="btn-danger btn-lg" style="max-width:300px">LES OFFRES DU MOMENT</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<div id="fh5co-featured-menu" class="fh5co-section" style="padding:0">
  <div class="container" style="margin-top: 6em" id="best-sellers">
    <div class="text-center">
      <h2 style="color:white; font-size:45px; font-weight: 600;">Les meilleures ventes du moment</h2>
    </div>
  </div>
  <div class="products-container">
    {% for product in products %}
      <div class="card-homepage">
        <img src="{{ asset('images/products/'~product.imageName) }}" alt="{{ product.name }}">
        <div class="card-title">
          <h4>{{ product.name }}</h4>
        </div>
        <h5 class="card-category">
          Catégorie : {{ product.category.name }}
        </h5>
        <p class="card-description">
          {{ product.description }}
        </p>
        <div class="card-price">
          <h4>{{ product.price|number_format(2, ',', ' ') }} €</h4>
        </div>
      </div>
    {% else %}
      <p>Il n'y a aucun produit à afficher</p>
    {% endfor %}
  </div>
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center">
        <a href="{{ path('product_list') }}" class="btn-danger btn-lg" style="max-width:300px">VOIR TOUS NOS PRODUITS</a>
      </div>
    </div>
  </div>
</div>
{% endblock %}