{% extends 'base.html.twig' %}

{% block title %}Mon espace - La boutique design
{% endblock %}

{% block body %}
	<header id="fh5co-header" class="fh5co-cover js-fullheight main-bg-users" role="banner" style="max-height:50vh;" data-stellar-background-ratio="0.5"></header>

	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<div class="container">
		<div class="row" style="display:flex; justify-content:center;">
			<div class="col-xs-12 col-sm-8 col-md-6 form-container">
				<div class="form-group">
					<h1 class="text-center" style="color:white; margin-top: 2rem;">Réinitialiser votre mot de passe</h1>
					{% for flashError in app.flashes('verify_email_error') %}
						<div class="alert alert-danger" role="alert">{{ flashError }}</div>
					{% endfor %}
					{{ form_start(requestForm) }}
          <div class="form-group">
            {{ form_label(requestForm.email) }}
            {{ form_widget(requestForm.email) }}
            <small>
              Entrez votre adresse email et nous vous enverrons un lien de réinitialisation de mot de passe.
            </small>
					</div>
					<div class="form-group">
						<button type="submit" class="btn btn-primary btn-outline btn-lg">Valider</button>
					</div>
          {{ form_end(requestForm) }}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
