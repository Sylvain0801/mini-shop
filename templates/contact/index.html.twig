{% extends "base.html.twig" %}
{% block title 'Contact - La Boutique Design' %}
{% block body %}
<header id="fh5co-header" class="fh5co-cover js-fullheight main-bg-users" role="banner" style="max-height: 50vh;" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container container-small">
    <div class="row">
      <div class="col-md-12 text-center display-tc">
        <h1>Nous contacter</h1>
      </div>
    </div>
  </div>
</header>
<div class="container">
  <div class="row" style="display:flex; justify-content:center;">
    <div class="col-xs-12 col-sm-10 form-container">
      <h2 class="text-center" style="color:white;margin-top: 1rem">Merci de remplir notre formulaire</h2>
      {% for message in app.flashes('message_email') %}
        <div class="alert alert-success text-center" role="alert">{{ message }}</div>
      {% endfor %}
      <div class="form-group">
        {{ form(formContact) }}
      </div>
    </div>
  </div>
</div>
{% endblock %}