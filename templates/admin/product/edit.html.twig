{% extends 'base.html.twig' %}

{% block title %}Espace administrateur - La boutique design{% endblock %}

{% block body %}
<header id="fh5co-header" class="fh5co-cover js-fullheight main-bg-products" role="banner" style="max-height:35vh;" data-stellar-background-ratio="0.5">
  <div class="overlay"></div>
  <div class="container container-small">
    <div class="row">
      <div class="col-md-12 text-center display-tc">
        <h1>Espace administrateur</h1>
      </div>
    </div>
  </div>
</header>
<div class="container" style="margin-top: 1rem">
  <a href="{{ path('admin_product_list') }}" class="btn-success btn-lg" role="button" style="float:right; margin:2rem">
    <i class="icon-back"></i>&nbsp;RETOUR LISTE
  </a>
  <div class="row" style="clear:both; display:flex; justify-content:center;">
    <div class="col-xs-12 form-container">
      <h2 class="text-center" style="color:white;margin-top: 1rem">Modifier un produit</h2>
      
      <div class="form-goup">
        {{ form_start(productForm) }}
        <div class="col-xs-12 col-md-7">

          <div class="row">
            <div class="form-group col-xs-12 col-sm-8">
              {{ form_row(productForm.name) }}
            </div>
            <div class="form-group col-xs-12 col-sm-4">
              {{ form_label(productForm.category) }}
              {{ form_widget(productForm.category) }}
            </div>
          </div>
          <div class="row">
            <div class="form-group col-xs-12 col-sm-8">
              {{ form_row(productForm.description) }}
            </div>
            <div class="col-xs-12 col-sm-4">
              <div class="form-group">
                {{ form_label(productForm.price) }}
                {{ form_widget(productForm.price) }}
              </div>
              <div class="form-group">
                {{ form_label(productForm.imageFile) }}
                <div style="display:flex">
                  {{ form_widget(productForm.imageFile) }}
                  {{ form_help(productForm.imageFile) }}
                </div>
              </div>
              <div style="display: flex; justify-content: space-between; flex-wrap: wrap;">
                <div class="form-group" style="display:flex">
                  {{ form_widget(productForm.firstpage) }}
                  {{ form_label(productForm.firstpage) }}
                </div>
                <div class="form-group" style="display:flex">
                  {{ form_widget(productForm.active) }}
                  {{ form_label(productForm.active) }}
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-md-5" style="height: 400px; overflow: hidden; display: flex;
        justify-content: center;">
          <img src="{{ asset('images/products/'~product.imageName) }}" alt="{{ product.name }}" style="max-height:350px;">
        </div>
      </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary btn-outline btn-lg" style="float:right; margin: 0 0 2rem">Enregistrer les modifications</button>
        </div>
        {{ form_end(productForm) }}
    </div>
  </div>
</div>
{% endblock %}
